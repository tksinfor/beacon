<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_customer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ik9.beacon.activity.CustomerActivity">

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/star_big_on"
        app:layout_constraintLeft_toLeftOf="@+id/content_customer"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/content_customer"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/content_customer"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imgChainIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/star_big_on"
        app:layout_constraintLeft_toLeftOf="@+id/content_customer"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgPreview"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/imgChainIcon"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgPreview"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imgMoreVertical"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/imgChainIcon"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imgMoreVertical"
        android:layout_marginEnd="8dp" />

    <ImageButton
        app:srcCompat="@drawable/ic_more_vert_black_18dp"
        android:background="@null"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imgMoreVertical"
        app:layout_constraintLeft_toRightOf="@+id/txtTitle"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgPreview"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/content_customer"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>
