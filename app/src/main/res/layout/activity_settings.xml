<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/content_settings"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ik9.beacon.activity.SettingsActivity">

    <TextView
        android:id="@+id/center_1"
        android:background="#00ffffff"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_settings"
        app:layout_constraintRight_toRightOf="@id/content_settings"
        app:layout_constraintTop_toTopOf="@+id/content_settings"/>

    <TextView
        android:id="@+id/lblBluetooth"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/label_frame"
        android:ems="10"
        android:text="@string/bluetooth"
        android:textAlignment="center"
        android:textColor="@color/colorLabelText"
        android:textSize="@dimen/tvwCustomerLabelTextSize"
        app:layout_constraintRight_toRightOf="@id/center_1"
        app:layout_constraintTop_toTopOf="@+id/content_settings" />

    <ToggleButton
        android:id="@+id/tgbBluetooth"
        android:layout_width="90dp"
        android:layout_height="@dimen/toggle_button_height"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/toggle_frame"
        android:textOff="@string/toggleTextOff"
        android:textOn="@string/toggleTextOn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/center_1"
        app:layout_constraintRight_toRightOf="@+id/content_settings"
        app:layout_constraintTop_toTopOf="@+id/content_settings" />

    <TextView
        android:id="@+id/lblWiFi"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/label_frame"
        android:ems="10"
        android:text="@string/wi_fi"
        android:textAlignment="center"
        android:textColor="@color/colorLabelText"
        android:textSize="@dimen/tvwCustomerLabelTextSize"
        app:layout_constraintRight_toRightOf="@id/center_1"
        app:layout_constraintTop_toBottomOf="@+id/lblBluetooth" />

    <ToggleButton
        android:id="@+id/tgbWiFi"
        android:layout_width="90dp"
        android:layout_height="@dimen/toggle_button_height"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_frame"
        android:textOff="@string/toggleTextOff"
        android:textOn="@string/toggleTextOn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/center_1"
        app:layout_constraintRight_toRightOf="@+id/content_settings"
        app:layout_constraintTop_toBottomOf="@+id/tgbBluetooth" />

</android.support.constraint.ConstraintLayout>